<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_send_acknowledgement"
    android:layout_width="match_parent"
    android:background="#262021"
    android:layout_height="match_parent"
    tools:context="com.wildstop.smixxitceleb.SendAcknowledgement">


    <ImageView
        android:paddingTop="80dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@mipmap/aknowlegmentscomplete"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />


    <Button
        android:background="@mipmap/camera"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="174dp"
        android:id="@+id/picture_button" />

    <Button
        android:layout_alignTop="@id/picture_button"
        android:background="@mipmap/audio"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/audio_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:background="@mipmap/video"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/audio_button"
        android:layout_alignBottom="@+id/audio_button"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="53dp"
        android:id="@+id/video_button" />

    <EditText
        android:textStyle="bold"
        android:background="#329EAE"
        android:textColor="@color/colorAccent"
        android:hint="Send Elaina Custom Message..."
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
