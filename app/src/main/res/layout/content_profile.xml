<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.wildstop.smixxitceleb.Profile"
    tools:showIn="@layout/activity_profile">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


            <ImageView
                android:adjustViewBounds="true"
                android:src="@mipmap/kylie_profile"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />



        </RelativeLayout>




    </ScrollView>

    <include
        layout="@layout/seemorecelebs_drawer"
        android:id="@+id/listview_more_celebs"
        android:layout_gravity="start"
        android:layout_width="240dp"
        android:layout_height="fill_parent"/>


    <include
        layout="@layout/seemorefriends_drawer"
        android:id="@+id/listview_see_more_friends"
        android:layout_gravity="end"
        android:layout_width="240dp"
        android:layout_height="fill_parent"/>

</android.support.v4.widget.DrawerLayout>
