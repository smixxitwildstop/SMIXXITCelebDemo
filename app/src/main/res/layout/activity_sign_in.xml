<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_in"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#353333"
    tools:context="com.wildstop.smixxitceleb.SignIn">

    <ImageView
        android:id="@+id/imageview_smixxit_logo"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/smixxit_logo"
        android:layout_width="200dp"
        android:layout_height="120dp" />



    <RelativeLayout
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_below="@id/imageview_smixxit_logo"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <TextView
            android:layout_marginTop="20dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:id="@+id/textview_emailaddress_sign_in"
            android:text="SMIXXIT Celebrity ID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:textColor="#329EAE"
            android:singleLine="true"
            android:backgroundTint="#C90065"
            android:layout_below="@id/textview_emailaddress_sign_in"
            android:id="@+id/editext_username_sign_in"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <TextView

            android:layout_marginTop="30dp"
            android:id="@+id/textview_password_sign_in"
            android:layout_below="@+id/editext_username_sign_in"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="Password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />



        <EditText
            android:textColor="#329EAE"
            android:singleLine="true"
            android:backgroundTint="#C90065"
            android:layout_below="@id/textview_password_sign_in"
            android:id="@+id/editext_password_sign_in"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />



        <Button
            android:textStyle="bold"
            android:text="Sign IN"
            android:background="#C90065"
            android:layout_marginTop="60dp"
            android:layout_below="@id/editext_password_sign_in"
            android:id="@+id/button_sign_in"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />



        <Button

            android:textColor="#329EAE"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:text="SMIXXIT SUPPORT"
            android:background="@android:color/transparent"
            android:layout_below="@+id/button_sign_in"
            android:id="@+id/reset_password_sign_in"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />


    </RelativeLayout>


</RelativeLayout>
